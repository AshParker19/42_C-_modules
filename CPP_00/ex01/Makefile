################################################################################
###**								CPP00 ex01							   **###
################################################################################

###--------------------------------------------------------------------------###
###**						Variables and dependencies					   **###
#####----------------------------------------------------------------------#####

# Name
NAME = my_awesome_phonebook

# Compiler
CXX = c++

# Flags
CXXFLAGS = -std=c++98 -Wall -Wextra -Werror

# Sources
SRC = 	my_awesome_phonebook.cpp	\
		options.cpp					\
		Contact.cpp					\

# Objects
OBJ = $(SRC:%.cpp=obj/%.o)

# Colors
CYAN   = \033[0;36m
RED    = \033[0;31m
GREEN  = \033[0;32m
ORANGE = \033[0;33m
BLUE   = \033[34m
PURPLE = \033[35m
DEF    = \033[0m

###++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++###
###**						PHONY targets and rules						   **###
###++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++###

all: $(NAME)

$(NAME): $(OBJ)
	@$(CXX) $(CXXFLAGS) -o $@ $^
#	@echo "$(CYAN)╔═══════════════════════════════════════════╗"
#	@echo "$(CYAN)║                   $(PURPLE)C++ 00                  $(CYAN)║"
#	@echo "$(CYAN)╟───────────────────────────────────────────╢"
#	@echo "$(CYAN)║                    $(BLUE)ex01                   $(CYAN)║"
#	@echo "$(CYAN)╟───────────────────────────────────────────╢"
#	@echo "$(CYAN)║            $(GREEN)$(NAME)           $(CYAN)║"
#	@echo "$(CYAN)╚═══════════════════════════════════════════╝$(DEF)"

obj/%.o: %.cpp
	@mkdir -p obj
	@$(CXX) $(CXXFLAGS) -c -o $@ $<

clean:
	@rm -rf obj
#	@echo "$(ORANGE)╔═══════════════════════════════════════════╗"
#	@echo "║               $(RED)[✓]  CLEANED!$(ORANGE)               ║"
#	@echo "$(ORANGE)╚═══════════════════════════════════════════╝$(DEF)"

fclean: clean
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re

################################################################################
###**									End								   **###
################################################################################