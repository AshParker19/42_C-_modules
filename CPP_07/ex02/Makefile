################################################################################
###**								CPP07 ex02							   **###
################################################################################

###--------------------------------------------------------------------------###
###**						Variables and dependencies					   **###
#####----------------------------------------------------------------------#####

# Name
NAME = array

# Compiler
CXX = c++

# Flags
CXXFLAGS = -std=c++98 -Wall -Wextra -Werror

# Sources
SRC = 	main.cpp				\

# Objects
OBJ = $(SRC:%.cpp=obj/%.o)

###++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++###
###**						PHONY targets and rules						   **###
###++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++###

all: $(NAME)

$(NAME): $(OBJ)
	@$(CXX) $(CXXFLAGS) -o $@ $^
	@echo "╔═══════════════════════════════════════════╗"
	@echo "║                   C++ 07                  ║"
	@echo "╟───────────────────────────────────────────╢"
	@echo "║                    ex02                   ║"
	@echo "╟───────────────────────────────────────────╢"
	@echo "║                     $(NAME)                  ║"
	@echo "╚═══════════════════════════════════════════╝"

obj/%.o: %.cpp
	@mkdir -p obj
	@$(CXX) $(CXXFLAGS) -c -o $@ $<

clean:
	@rm -rf obj
	@echo "╔═══════════════════════════════════════════╗"
	@echo "║               [✓]  CLEANED!               ║"
	@echo "╚═══════════════════════════════════════════╝"

fclean: clean
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re

################################################################################
###**									End								   **###
################################################################################